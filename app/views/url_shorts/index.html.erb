<p id="notice"><%= notice %></p>

<h1>Url Shorts</h1>

<table>
  <thead>
    <tr>
      <th>Original url</th>
      <th>Short url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @url_shorts.each do |url_short| %>
      <tr>
        <td><%= url_short.original_url %></td>
        <td><%= url_short.short_url %></td>
        <td><%= link_to 'Show', url_short %></td>
        <td><%= link_to 'Edit', edit_url_short_path(url_short) %></td>
        <td><%= link_to 'Destroy', url_short, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Url Short', new_url_short_path %>
